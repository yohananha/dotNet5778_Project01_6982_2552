        <Button x:Name="deleteContract" Content="Delete Contract" HorizontalAlignment="Left" Margin="145,214,0,0" VerticalAlignment="Top" Width="102" Height="47"/>
        <Button x:Name="deleteChild_Copy" Content="Update Child" HorizontalAlignment="Left" Margin="49,270,0,0" VerticalAlignment="Top" Width="91" Height="47" Click="UpdateChild_Click"/>
