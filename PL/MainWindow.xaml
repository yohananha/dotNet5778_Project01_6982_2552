<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000" WindowStyle="None" WindowStartupLocation="CenterScreen">

    <Grid>
        <Image x:Name="BGMain"  Source="images/1459.jpg" Stretch="Fill" Width="1000" Height="700"/>
        <Image x:Name ="mary" Source="images/mary2.png" Width="200" HorizontalAlignment="Left" VerticalAlignment="Bottom"></Image>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="164,163,153.6,0" TextWrapping="Wrap" Text="ברוכים הבאים" VerticalAlignment="Top" Height="131" Width="676" TextAlignment="Center" LineHeight="22" FontSize="72" FontWeight="Bold" Foreground="White" FontFamily="Open Sans Hebrew"/>
        <Button x:Name="button" Content="מסך אם" HorizontalAlignment="Center" Margin="541,306,252.6,309.6" VerticalAlignment="Center" Width="200" Height="78" Click="button_Click" FontSize="20" FontFamily="Open Sans Hebrew" FontWeight="Bold" Background="White" Opacity="0.6" BorderBrush="{x:Null}" Foreground="#FF93398D"/>
        <Button x:Name="button_Copy" Content="מסך מטפלת" HorizontalAlignment="Center" Margin="243,305,550.6,310.6" VerticalAlignment="Center" Width="200" Height="78" Click="button_Copy_Click" FontSize="20" FontFamily="Open Sans Hebrew" FontWeight="Bold" Opacity="0.6" BorderBrush="{x:Null}" Foreground="#FF93398D">
            <Button.Background>
                <RadialGradientBrush>
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="exitButton" Content="יציאה" HorizontalAlignment="Right" Margin="0,0,21,21" VerticalAlignment="Bottom" Width="104" Height="37" Background="White" BorderBrush="{x:Null}" Opacity="0.6" Click="exitButton_Click"/>
        <Button x:Name="dataButton" Content="חיפוש במסד נתונים" HorizontalAlignment="center" Height="75" Margin="357,498,357.6,0" VerticalAlignment="Top" Width="279" FontFamily="Open Sans Hebrew" FontSize="20" FontWeight="Bold" BorderBrush="{x:Null}" Foreground="#FFA84F8E" Click="button1_Click">
            <Button.Background>
                <SolidColorBrush Color="White" Opacity="0.6"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
