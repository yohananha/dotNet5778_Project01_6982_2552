<Window x:Class="PL.deleteContractWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="deleteContractWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="82*"/>
            <RowDefinition Height="76*"/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="מחיקת חוזה" HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="20"/>
        <Label x:Name="label1" Content="הכנס תעודת זהות ילד" HorizontalAlignment="Center"  Grid.Row="1" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="textBoxDeleteContract"  Grid.Row="2" Text="הכנס כאן" />
        <Button x:Name="button" Content="מחק חוזה" Grid.Row="3" Click="button_Click" />

    </Grid>
</Window>
