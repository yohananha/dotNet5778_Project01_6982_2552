                </Grid>
            </TabItem>

            <TabItem Header="מחיקת אם" FlowDirection="LeftToRight" Height="80" Width="330" FontFamily="Open Sans Hebrew" FontSize="20" BorderBrush="{x:Null}">

                <Grid Background="#FFFF" Opacity="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="95*"/>
                        <RowDefinition Height="8*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="331*"/>
                        <ColumnDefinition Width="250*"/>
                        <ColumnDefinition Width="450*"/>
                    </Grid.ColumnDefinitions>
                    <Grid HorizontalAlignment="Center" Height="400" Margin="-3,0,-2.6,0" VerticalAlignment="Bottom" Width="1000" Grid.ColumnSpan="3" Grid.RowSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20*"/>
                            <RowDefinition Height="360*"/>
