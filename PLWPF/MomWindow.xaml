                    <DataGrid x:Name="dataGrid1" Grid.Column="1" HorizontalAlignment="Left" Margin="29.8,80,0,0" VerticalAlignment="Top" Height="300" Width="600" Grid.ColumnSpan="2"/>
                    <Button x:Name="button4" Content="חיפוש לפי תז" Grid.Column="1" HorizontalAlignment="Left" Margin="29.8,25,0,0" VerticalAlignment="Top" Width="188" BorderBrush="{x:Null}"/>
                    <TextBox x:Name="textBox1" Grid.Column="2" HorizontalAlignment="Left" Height="35" Margin="19,24,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="368"/>
                </Grid>
            </TabItem>

        </TabControl>
        <Button x:Name="button" Content="חזרה לתפריט ראשי" HorizontalAlignment="Left" Opacity="0.6" Margin="40,0,0,20" VerticalAlignment="Bottom" Width="200" Height="50" Click="button_Click"/>

    </Grid>
</Window>
