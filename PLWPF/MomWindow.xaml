                        </Grid.ColumnDefinitions>
                        <Button x:Name="button5" Content="מחיקה" HorizontalAlignment="Left" Margin="38,0,0,11" VerticalAlignment="Bottom" Width="150" Height="60" Grid.Column="1" Grid.Row="1"/>
